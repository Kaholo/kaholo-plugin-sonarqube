{
  "name": "SonarQube",
  "type": "executer",
  "execProgram": "node",
  "main": "app.js",
  "exposeRoute": true,
  "imgUrl": "sonar.png",
  "version": "1.0.3",
  "description": "Integration with SonarQube API and CLI",
  "category": "TESTING",
  "auth": {
    "authId": "sonarQubeAccount",
    "params": [
      {
        "name": "hostUrl",
        "viewName": "Host URL",
        "description": "URL of the SonarQube server",
        "type": "string"
      },
      {
        "name": "login",
        "viewName": "CLI Token",
        "description": "CLI Token used to authenticate CLI execution",
        "type": "vault"
      },
      {
        "name": "restToken",
        "viewName": "REST API Token",
        "description": "API Token used to authenticate API calls",
        "type": "vault"
      }
    ]
  },
  "methods": [
    {
      "name": "runSonarScanner",
      "viewName": "Run Sonar Scanner",
      "params": [
        {
          "name": "workingDirectory",
          "viewName": "Working Directory",
          "type": "string"
        },
        {
          "name": "projectKey",
          "viewName": "Project Key",
          "required": true,
          "type": "string"
        },
        {
          "name": "sources",
          "viewName": "Sources Path",
          "description": "Paths to the sources, one per line",
          "required": true,
          "parserType": "array",
          "type": "text"
        },
        {
          "name": "additionalArguments",
          "viewName": "Additional Arguments",
          "description": "Additional arguments to pass to the CLI, one argument per line",
          "parserType": "array",
          "type": "text"
        }
      ]
    },
    {
      "name": "createProject",
      "viewName": "Create Project",
      "params": [
        {
          "name": "projectName",
          "viewName": "Project name",
          "required": true,
          "type": "string"
        },
        {
          "name": "organization",
          "viewName": "Organization",
          "type": "string"
        },
        {
          "name": "projectKey",
          "viewName": "Project key",
          "required": true,
          "type": "string"
        },
        {
          "name": "visibility",
          "viewName": "Visibility",
          "type": "string"
        }
      ]
    },
    {
      "name": "getViolations",
      "viewName": "Get Violations",
      "params": [
        {
          "name": "HOST_URL",
          "viewName": "host",
          "type": "string"
        },
        {
          "name": "COMPONENT_NAME",
          "viewName": "Component Name",
          "type": "string"
        },
        {
          "name": "username",
          "viewName": "Sonar Username",
          "type": "string"
        },
        {
          "name": "password",
          "viewName": "Sonar Password",
          "type": "vault"
        },
        {
          "name": "bearerToken",
          "viewName": "API Token",
          "type": "vault"
        }
      ]

    },
    {
      "name": "getCoverage",
      "viewName": "Get Code Coverage",
      "params": [

        {
          "name": "HOST_URL",
          "viewName": "host",
          "type": "string"
        },
        {
          "name": "COMPONENT_NAME",
          "viewName": "Component Name",
          "type": "string"
        },
        {
          "name": "username",
          "viewName": "Sonar Username",
          "type": "string"
        },
        {
          "name": "password",
          "viewName": "Sonar Password",
          "type": "vault"
        },
        {
          "name": "bearerToken",
          "viewName": "API Token",
          "type": "vault"
        }

      ]
    }
  ]
}
