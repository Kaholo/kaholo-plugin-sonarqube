{
  "name": "sonarqube",
  "viewName": "SonarQube",
  "type": "executer",
  "execProgram": "node",
  "main": "app.js",
  "exposeRoute": true,
  "imgUrl": "logo.png",
  "version": "1.0.3",
  "description": "Integration with SonarQube API and CLI",
  "category": "TESTING",
  "auth": {
    "authId": "sonarQubeAccount",
    "params": [
      {
        "name": "hostUrl",
        "viewName": "Host URL",
        "description": "URL of the SonarQube server",
        "type": "string"
      },
      {
        "name": "token",
        "viewName": "Token",
        "description": "User, Project Analysis, or Global Analysis token to authenticate with SonarQube",
        "type": "vault"
      }
    ]
  },
  "methods": [
    {
      "name": "runSonarScanner",
      "viewName": "Run Sonar Scanner",
      "allowEmptyResult": true,
      "params": [
        {
          "name": "workingDirectory",
          "viewName": "Working Directory",
          "type": "string",
          "parserType": "filePath",
          "parserOptions": {
            "throwIfDoesntExist": true,
            "acceptedTypes": ["directory"]
          }
        },
        {
          "name": "projectKey",
          "viewName": "Project Key",
          "required": true,
          "type": "string"
        },
        {
          "name": "sources",
          "viewName": "Sources Path",
          "description": "Paths to the sources, one per line",
          "required": false,
          "parserType": "array",
          "type": "text"
        },
        {
          "name": "additionalArguments",
          "viewName": "Additional Arguments",
          "description": "Additional arguments to pass to the CLI, one argument per line",
          "parserType": "array",
          "type": "text"
        }
      ]
    },
    {
      "name": "createProject",
      "viewName": "Create Project",
      "params": [
        {
          "name": "projectName",
          "viewName": "Project name",
          "required": true,
          "type": "string"
        },
        {
          "name": "projectKey",
          "viewName": "Project key",
          "required": true,
          "type": "string"
        },
        {
          "name": "organization",
          "viewName": "Organization",
          "type": "string"
        },
        {
          "name": "visibility",
          "viewName": "Visibility",
          "type": "options",
          "options": [
            {
              "id": "private",
              "name": "Private"
            },
            {
              "id": "public",
              "name": "Public"
            }
          ]
        }
      ]
    },
    {
      "name": "getViolations",
      "viewName": "Get Violations",
      "params": [
        {
          "name": "componentName",
          "viewName": "Component Name",
          "required": true,
          "type": "string"
        }
      ]
    },
    {
      "name": "getCoverage",
      "viewName": "Get Code Coverage",
      "params": [
        {
          "name": "componentName",
          "viewName": "Component Name",
          "required": true,
          "type": "string"
        }
      ]
    },
    {
      "name": "searchProjects",
      "viewName": "Search Projects",
      "params": [
        {
          "name": "query",
          "viewName": "Project Name",
          "description": "Project name or project key to search by, optional",
          "type": "string",
          "placeholder": "my-project"
        }
      ]
    }
  ]
}
